<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <title>{% if title %}{{ title }} - {% endif %}{{ podcast.title }}</title>
  <meta name="description" content="{{ podcast.description | strip_html | truncate: 160 }}">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:title" content="{% if title %}{{ title }} - {% endif %}{{ podcast.title }}">
  <meta property="og:description" content="{{ podcast.description | strip_html | truncate: 160 }}">

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:title" content="{% if title %}{{ title }} - {% endif %}{{ podcast.title }}">
  <meta property="twitter:description" content="{{ podcast.description | strip_html | truncate: 160 }}">

  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap"
    rel="stylesheet">

  <!-- Styles -->
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <!-- Audio Player Widget -->
  <div id="audio-player" class="audio-player">
    <div class="volume-control">
      <button class="volume-btn" id="volumeBtn">
          <svg class="volume-icon" viewBox="0 0 24 24" fill="currentColor">
            <path
              d="M3 9v6h4l5 5V4L7 9H3zm13.5 3c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02zM14 3.23v2.06c2.89.86 5 3.54 5 6.71s-2.11 5.85-5 6.71v2.06c4.01-.91 7-4.49 7-8.77s-2.99-7.86-7-8.77z" />
          </svg>
          <svg class="volume-mute-icon" viewBox="0 0 24 24" fill="currentColor" style="display: none;">
            <path d="M16.5 12c0-1.77-1.02-3.29-2.5-4.03v2.21l2.45 2.45c.03-.2.05-.41.05-.63zm2.5 0c0 .94-.2 1.82-.54 2.64l1.51 1.51C20.63 14.91 21 13.5 21 12c0-4.28-2.99-7.86-7-8.77v2.06c2.89.86 5 3.54 5 6.71zM4.27 3L3 4.27 7.73 9H3v6h4l5 5v-6.73l4.25 4.25c-.67.52-1.42.93-2.25 1.18v2.06c1.38-.31 2.63-.95 3.69-1.81L19.73 21 21 19.73l-9-9L4.27 3zM12 4L9.91 6.09 12 8.18V4z"/>
          </svg>
        </button>
        <div class="volume-slider-container" id="volumeSliderContainer" style="display: none;">
          <input type="range" min="0" max="100" value="100" class="volume-slider" id="volumeSlider">
        </div>
    </div>
    <div class="player-content">
      <div class="player-top">
        <div class="player-info">
          <span class="now-playing">Now Playing:</span>
          <span class="episode-title" id="currentEpisode">Select an episode</span>
        </div>
      </div>
      <div class="progress-container">
        <div class="progress-bar" id="progressBar">
          <div class="progress-fill" id="progressFill"></div>
          <div class="progress-handle" id="progressHandle"></div>
        </div>
        <div class="time-display">
          <span class="time-current" id="currentTime">0:00</span>
          <span class="time-separator">/</span>
          <span class="time-total" id="totalTime">0:00</span>
        </div>
      </div>
      <div class="player-controls">
        <button class="skip-btn" id="skipBackBtn" title="Skip back 15 seconds">
          <img src="/images/icons/back-15.svg" alt="Skip back 15 seconds">
        </button>
        <button class="play-pause-btn" id="playPauseBtn">
          <svg class="play-icon" viewBox="0 0 24 24" fill="currentColor">
            <path d="M8 5v14l11-7z" />
          </svg>
          <svg class="pause-icon" viewBox="0 0 24 24" fill="currentColor" style="display: none;">
            <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z" />
          </svg>
        </button>
        <button class="skip-btn" id="skipForwardBtn" title="Skip forward 30 seconds">
          <img src="/images/icons/forward-30.svg" alt="Skip forward 30 seconds">
        </button>
      </div>
    </div>
    <audio id="audioElement" preload="none"></audio>
  </div>

  <!-- Navigation -->
  <nav class="main-nav">
    <div class="nav-container">
      <div class="nav-links">
        <a href="/" class="nav-link{% if title == 'Home' or title == nil %} active{% endif %}">Home</a>
        <a href="/episodes/" class="nav-link{% if title contains 'Episode' %} active{% endif %}">Episodes</a>
        <a href="/about/" class="nav-link{% if title == 'About' %} active{% endif %}">About</a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="main-content">
    {{ page_content }}
  </main>

  <!-- Footer -->
  <footer class="main-footer">
    <div class="footer-container">
      <div class="footer-content">
        <div class="footer-brand">
          <h3>{{ podcast.title }}</h3>
          <p>{{ podcast.description | strip_html }}</p>
        </div>

        <div class="footer-links">
          <div class="footer-section footer-nav">
            <h3>Check out</h3>
            <a href="/episodes/">Episodes</a>
            <a href="/about/">About</a>
          </div>

          <div class="footer-section">
            <h4>Listen on your favorite platform:</h4>
            <div class="platform-links">
              <a href="{{ settings.apple_podcasts }}" class="platform-link">
                <img src="/images/platforms/apple-podcasts.svg" height="22" alt="Apple Podcasts">
              </a>
              <a href="{{ settings.google_podcasts }}" class="platform-link">
                <img src="/images/platforms/google.svg" height="22" width="122" alt="Google Podcasts">
              </a>
              <a href="{{ settings.spotify }}" class="platform-link">
                <img src="/images/platforms/spotify.svg" height="22" alt="Spotify">
              </a>
              <a href="{{ settings.youtube }}" class="platform-link">
                <img src="/images/platforms/youtube.svg" height="22" alt="YouTube">
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="footer-bottom">
        <div class="social-links">
          <a href="{{ settings.twitter }}" class="social-link">
            <img src="/images/platforms/twitter.svg" height="24" width="24" alt="Twitter">
          </a>
          <a href="{{ settings.instagram }}" class="social-link">
            <img src="/images/platforms/instagram.svg" height="24" width="24" alt="Instagram">
          </a>
          <a href="{{ settings.tiktok }}" class="social-link">
            <img src="/images/platforms/tiktok.svg" height="24" width="24" alt="TikTok">
          </a>
          </a>
        </div>

        <div class="copyright">
          <p>&copy; 2025. All Rights Reserved. <a href="{{ podcast.website_url }}">{{ podcast.title }}</a></p>
          <div class="footer-legal">
            <a href="/terms">Terms</a>
            <a href="/privacy">Privacy</a>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <!-- JavaScript -->
  <script src="/js/player.js"></script>
</body>

</html>