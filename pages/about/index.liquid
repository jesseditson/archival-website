{% assign podcast = objects.podcast %}
{% assign settings = objects.settings %}
{% assign host = objects.host %}
{% layout 'theme' title: "About" %}

<section class="about-hero">
  <div class="container">
    <h1 class="page-title">About {{ podcast.title }}</h1>
    <div class="about-content">
      <div class="about-text">
        {{ podcast.description }}

        <p>Our podcast brings together diverse voices and perspectives to explore the most important stories shaping our
          world today. From breaking news to deep dives into culture and technology, we're here to inform, entertain,
          and inspire meaningful conversations.</p>

        <p>Join us every week as we unpack the stories that matter most, featuring expert guests and thoughtful analysis
          that goes beyond the headlines.</p>
      </div>
    </div>
  </div>
</section>

<section class="hosts-section">
  <div class="container">
    <h2 class="section-title">Meet Your Hosts</h2>

    <div class="hosts-grid">
      {% for current_host in host %}
      <div class="host-card">
        <div class="host-image">
          <img src="/images/hosts/{{ current_host.path }}-avatar.jpg" alt="{{ current_host.name }}">
        </div>

        <div class="host-info">
          <h3 class="host-name">{{ current_host.name }}</h3>
          <div class="host-bio">
            {{ current_host.bio }}
          </div>

          <div class="host-social">
            {% if current_host.twitter %}
            <a href="{{ current_host.twitter }}" class="social-link" target="_blank">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path
                  d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 713 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z" />
              </svg>
            </a>
            {% endif %}

            {% if current_host.linkedin %}
            <a href="{{ current_host.linkedin }}" class="social-link" target="_blank">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M16 8a6 6 0 616 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 616-6zM2 9h4v12H2z" />
                <circle cx="4" cy="4" r="2" />
              </svg>
            </a>
            {% endif %}

            {% if current_host.instagram %}
            <a href="{{ current_host.instagram }}" class="social-link" target="_blank">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <rect x="2" y="2" width="20" height="20" rx="5" ry="5" />
                <path d="m16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" />
                <line x1="17.5" y1="6.5" x2="17.51" y2="6.5" />
              </svg>
            </a>
            {% endif %}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<section class="contact-section">
  <div class="container">
    <h2 class="section-title">Get In Touch</h2>

    <div class="contact-content">
      <div class="contact-info">
        <p>Have a story idea, feedback, or just want to say hello? We'd love to hear from you!</p>

        <div class="contact-methods">
          <div class="contact-method">
            <h4>Email Us</h4>
            <a href="mailto:{{ podcast.email }}">{{ podcast.email }}</a>
          </div>

          <div class="contact-method">
            <h4>Follow Us</h4>
            <div class="social-links">
              <a href="{{ settings.twitter }}" class="social-link">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path
                    d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 713 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z" />
                </svg>
                Twitter
              </a>
              <a href="{{ settings.instagram }}" class="social-link">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5" />
                  <path d="m16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" />
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5" />
                </svg>
                Instagram
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>