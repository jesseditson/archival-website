{% assign title = objects.site.name | append: " | Contact" %}
{% layout 'theme' title: title
  , active_page: "contact" %}
{% assign contact = objects.contact %}
{% assign project_types = contact_project_types | sort: "order" %}
{% assign budget_ranges = contact_budgets | sort: "order" %}
{% assign contact_channels = contact_methods | sort: "order" %}
{% assign social_links = contact_socials | sort: "order" %}
{% assign faq_items = contact_faqs | sort: "order" %}

<!-- Contact Section -->
<div class="contact-section">
  <!-- Contact Hero -->
  <div class="contact-hero animate-on-scroll">
    <h2 class="section-title">{{ contact.hero_title }}</h2>
    <p class="lead-text">{{ contact.hero_lead }}</p>
  </div>

  <!-- Contact Grid -->
  <div class="contact-grid">
    <!-- Contact Form -->
    <div class="contact-form-wrapper animate-on-scroll">
      <form class="contact-form" id="contact-form">
        <div class="form-group">
          <label for="name">Your Name</label>
          <input type="text" id="name" name="name" placeholder="John Doe" required>
        </div>

        <div class="form-group">
          <label for="email">Email Address</label>
          <input type="email" id="email" name="email" placeholder="john@example.com" required>
        </div>

        <div class="form-group">
          <label for="project-type">Project Type</label>
          <select id="project-type" name="project-type" required>
            <option value="">Select a project type</option>
            {% for option in project_types %}
              <option value="{{ option.value }}">{{ option.label }}</option>
            {% endfor %}
          </select>
        </div>

        <div class="form-group">
          <label for="budget">Budget Range</label>
          <select id="budget" name="budget">
            <option value="">Select budget range</option>
            {% for option in budget_ranges %}
              <option value="{{ option.value }}">{{ option.label }}</option>
            {% endfor %}
          </select>
        </div>

        <div class="form-group full-width">
          <label for="message">Tell Me About Your Project</label>
          <textarea id="message" name="message" rows="6" placeholder="Share your vision, timeline, and any specific requirements..." required></textarea>
        </div>

        <button type="submit" class="submit-btn">
          <span class="btn-text">Send Message</span>
          <span class="btn-icon">â†’</span>
        </button>
      </form>
    </div>

    <!-- Contact Info -->
    <div class="contact-info-wrapper">
      <div class="contact-info-card animate-on-scroll">
        <h3>Get In Touch</h3>
        <div class="contact-methods">
          {% for method in contact_channels %}
            <div class="contact-method">
              <div class="method-icon">{{ method.icon }}</div>
              <div class="method-details">
                <h4>{{ method.label }}</h4>
                {% if method.url %}
                  <a href="{{ method.url }}">{{ method.value }}</a>
                {% else %}
                  <p>{{ method.value }}</p>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>

      {% if social_links and social_links.size > 0 %}
        <div class="social-links-card animate-on-scroll">
          <h3>Follow My Work</h3>
          <div class="social-links">
            {% for social in social_links %}
              <a href="{{ social.url }}" class="social-link">
                <span class="social-icon">{{ social.icon }}</span>
                <span class="social-name">{{ social.name }}</span>
              </a>
            {% endfor %}
          </div>
        </div>
      {% endif %}

      <div class="availability-card animate-on-scroll">
        <div class="availability-status">
          <div class="status-indicator"></div>
          <span class="status-text">{{ contact.availability_status }}</span>
        </div>
        <p class="availability-note">{{ contact.availability_note }}</p>
      </div>
    </div>
  </div>

  <!-- FAQ Section -->
  {% if faq_items and faq_items.size > 0 %}
    <div class="faq-section animate-on-scroll">
      <h3 class="content-title">Frequently Asked Questions</h3>
      <div class="faq-list">
        {% for faq in faq_items %}
          <div class="faq-item">
            <button class="faq-question">
              <span>{{ faq.question }}</span>
              <span class="faq-icon">+</span>
            </button>
            <div class="faq-answer">
              <p>{{ faq.answer }}</p>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  {% endif %}
</div>
