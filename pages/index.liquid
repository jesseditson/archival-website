{% layout 'theme' title: objects.site.name %}
{% assign base_map_url = "https://www.google.com/maps/embed/v1/place?key=AIzaSyBdU_Na_rXyj8E1cfyr9wxJjlK_VTwAK2s&q=" %}
{% assign map_address = objects.location.address | replace: " ", "%20" %}
{% assign map_embed_url = base_map_url | append: map_address %}

<div class="content">
  <header class="header">
    <div class="container">
      <div class="logo-container">
        <img src="{{ objects.site.logo_image.url }}" alt="{{ objects.site.name }} Logo" class="logo">
      </div>
      <h1 class="business-name">{{ objects.site.name }}</h1>
      <p class="tagline">{{ objects.site.tagline }}</p>
    </div>
  </header>

  <main>
    <section class="hours">
      <div class="container">
        <h2>Hours</h2>
        <ul>
          <li>Monday - Friday: {{ objects.hours.monday_friday }}</li>
          <li>Saturday: {{ objects.hours.saturday }}</li>
          <li>Sunday: {{ objects.hours.sunday }}</li>
        </ul>
      </div>
    </section>

    <section class="location">
      <div class="container">
        <h2>Location</h2>
        <p>{{ objects.location.address }}</p>
        <div class="map">
          <iframe src="{{ map_embed_url }}" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
      </div>
    </section>

    <section class="contact-info">
      <div class="container">
        <h2>Contact Us</h2>
        <p>Phone: {{ objects.contact.phone }}</p>
        <p>Email: <a href="mailto:{{ objects.contact.email }}">{{ objects.contact.email }}</a></p>
      </div>
    </section>

    <section class="about">
      <div class="container">
        <h2>About Us</h2>
        <p>{{ objects.about.description }}</p>
      </div>
    </section>
  </main>

  <footer class="footer">
    <div class="container">
      <p class="summary">{{ objects.site.name }} | {{ objects.contact.phone }} | {{ objects.location.address }}
      </p>
      <p class="hours-summary">Hours: Mon-Fri {{ objects.hours.monday_friday }} | Sat {{ objects.hours.saturday }} |
        Closed Sun</p>
      <p class="copyright">&copy; 2024 {{ objects.site.name }}</p>
    </div>
  </footer>
</div>