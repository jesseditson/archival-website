{% layout 'theme' title: "Profressional" %}

<!-- Header masthead -->
<header class="header">
  <div class="container">
    {% include "primary-nav" %}

    <!-- Professional photo -->
    <div class="avatar-wrapper">
      <img src="{{objects.professional.image.url}}"
        alt="{{ objects.professional.first_name }} {{ objects.professional.last_name }}" class="avatar" />
    </div>

    <!-- Professional name, title, location -->
    <div class="masthead">
      <h1 class="heading professional-name">{{ objects.professional.first_name }} {{ objects.professional.last_name }}
      </h1>
      <p class="subheading title">{{ objects.professional.title }}</p>
      <p class="subheading location">{{ objects.professional.location }}</p>
    </div>

    <!-- Masthead CTA -->
    <a href="#book" class="primary-cta-large">Book a Session</a>
  </div>
</header>

<div id="mobile-nav">
  {% include "primary-nav" %}
</div>

<div id="scroll-animate-target" class="scroll-animate">
  {% include "inner-nav" %}
</div>

<!-- Main content -->
<main class="main">

  <!-- About Me -->
  <section id="about-me" class="body-section container">
    <h2 class="heading">Hi, I'm {{ objects.professional.first_name }}</h2>
    {{ objects.professional.about }}
  </section>

  <!-- Services -->
  <section id="services" class="body-section container">
    <h2 class="heading">Services Offered</h2>
    <div class="services-grid">
      {% for service in objects.service %}
      <div class="service-item">
        <h3 class="service-title">{{ service.name }}</h3>
        <p class="service-description">{{ service.description }}</p>
        <a href="{{ service.path }}.html" class="service-moreinfo">More info &rarr;</a>
        <div class="service-footer">
          <span class="service-price">{{ service.price }}</span>
          <a href="#book?service={{ service.name | url_encode }}" class="service-cta">Book</a>
        </div>
      </div>
      {% endfor %}
    </div>
  </section>

  <!-- Testimonials -->
  {% if testimonials.size > 0 %}
  <section id="testimonials" class="body-section container">
    <h2 class="heading">Client Testimonials</h2>
  </section>

  {% if testimonials.size == 1 %}
  <!-- Single testimonial: full width -->
  <div class="testimonial-grid single">
    {% for testimonial in testimonials %}
    <div class="testimonial-item">
      <p class="testimonial-quote">"{{ testimonial.quote }}"</p>
      <div class="testimonial-footer">
        {% if testimonial.thumbnail.url %}
        <img src="{{testimonial.thumbnail.url}}" alt="{{testimonial.author}}" class="testimonial-avatar" />
        {% endif %}
        <p class="testimonial-author">{{ testimonial.author }}</p>
      </div>
    </div>
    {% endfor %}
  </div>
  {% elsif testimonials.size == 2 %}
  <!-- Two testimonials: 2 column grid -->
  <div class="testimonial-grid two">
    {% for testimonial in testimonials %}
    <div class="testimonial-item">
      <p class="testimonial-quote">"{{ testimonial.quote }}"</p>
      <div class="testimonial-footer">
        {% if testimonial.thumbnail.url %}
        <img src="{{testimonial.thumbnail.url}}" alt="{{testimonial.author}}" class="testimonial-avatar" />
        {% endif %}
        <p class="testimonial-author">{{ testimonial.author }}</p>
      </div>
    </div>
    {% endfor %}
  </div>
  {% elsif testimonials.size == 3 %}
  <!-- Three testimonials: 2 on top, 1 full width below -->
  <div class="testimonial-grid three">
    {% for testimonial in testimonials %}
    <div class="testimonial-item">
      <p class="testimonial-quote">"{{ testimonial.quote }}"</p>
      <div class="testimonial-footer">
        {% if testimonial.thumbnail.url %}
        <img src="{{testimonial.thumbnail.url}}" alt="{{testimonial.author}}" class="testimonial-avatar" />
        {% endif %}
        <p class="testimonial-author">{{ testimonial.author }}</p>
      </div>
    </div>
    {% endfor %}
  </div>
  {% elsif testimonials.size == 4 %}
  <!-- Four testimonials: 2x2 grid -->
  <div class="testimonial-grid four">
    {% for testimonial in testimonials %}
    <div class="testimonial-item">
      <p class="testimonial-quote">"{{ testimonial.quote }}"</p>
      <div class="testimonial-footer">
        {% if testimonial.thumbnail.url %}
        <img src="{{testimonial.thumbnail.url}}" alt="{{testimonial.author}}" class="testimonial-avatar" />
        {% endif %}
        <p class="testimonial-author">{{ testimonial.author }}</p>
      </div>
    </div>
    {% endfor %}
  </div>
  {% else %}
  <!-- Five or more testimonials: scrolling marquee -->
  {% assign half_testimonial_count = testimonials.size | divided_by: 2 | round %}
  <div class="testimonial-marquee">
    <div class="testimonial-track">
      {% for testimonial in testimonials limit: half_testimonial_count %}
      <div class="testimonial-item">
        <p class="testimonial-quote">"{{ testimonial.quote }}"</p>
        <div class="testimonial-footer">
          {% if testimonial.thumbnail.url %}
          <img src="{{testimonial.thumbnail.url}}" alt="{{testimonial.author}}" class="testimonial-avatar" />
          {% endif %}
          <p class="testimonial-author">{{ testimonial.author }}</p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
  <div class="testimonial-marquee">
    <div class="testimonial-track reverse">
      {% for testimonial in testimonials offset: half_testimonial_count %}
      <div class="testimonial-item">
        <p class="testimonial-quote">"{{ testimonial.quote }}"</p>
        <div class="testimonial-footer">
          {% if testimonial.thumbnail.url %}
          <img src="{{testimonial.thumbnail.url}}" alt="{{testimonial.author}}" class="testimonial-avatar" />
          {% endif %}
          <p class="testimonial-author">{{ testimonial.author }}</p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
  {% endif %}
  {% endif %}

  <!-- Book a session -->
  <section id="book" class="body-section container">
    <h2 class="heading">Book a Session</h2>
    <p class="main-body">I would love to hear from you. Please fill out the form below so we can get started.</p>
    <form class="form-container">
      <div class="form-grid">
        <!-- Row 1, Col 1 -->
        <label>
          <span>Your name</span>
          <input type="text" name="name" />
        </label>
        <!-- Row 1, Col 2 -->
        <label>
          <span>Email address</span>
          <input type="email" name="email" />
        </label>

        <!-- Row 2, Col 1 -->
        <label>
          <span>Phone number</span>
          <input type="tel" name="phone" />
        </label>
        <!-- Row 2, Col 2 -->
        <label>
          <span>Session type</span>
          <select name="session">
            {% for service in services %}
            <option>{{ service.name }}</option>
            {% endfor %}
          </select>
        </label>

        <!-- Full-width Comments row -->
        <label class="comments">
          <span>Comments</span>
          <textarea name="comments"></textarea>
        </label>

        <!-- Submit button in bottom-left -->
        <div class="form-actions">
          <button type="submit" class="primary-cta-large">Submit</button>
        </div>
      </div>
    </form>
  </section>
</main>