{% layout 'theme' title: objects.site.app_name %}

<nav class="nav">
  <div class="container">
    <div class="logo">
      <a href="#">
        <img src="{{ objects.site.app_logo.url }}" alt="{{ objects.site.app_name }} logo" />
      </a>
    </div>
    <div class="nav-items">
      <a class="nav-item" href="#features">Features</a>
      <a class="nav-item" href="#support">Support</a>
    </div>
  </div>
</nav>

<header class="hero">
  <div class="container">
    <div class="hero-statement">
      <span class="supplement">Introducing</span>
      <h1>{{ objects.site.app_name }}</h1>
      <div class="download-options">
        <a href="#">
          <img class="app-store-download" src="images/app-store-black.svg" />
        </a>
        <button class="button">Direct Download</button>
      </div>
    </div>
    <img class="hero-image" src="{{ objects.site.app_screenshot.url }}" />
  </div>
</header>

<main id="features" class="container">

  <h2>Features</h2>

  <section class="features-grid">
    {% for feature in objects.features %}
    <div class="feature">
      <div class="feature-icon">{{ feature.emoji }}</div>
      <div class="feature-text">
        <h3>{{ feature.title }}</h3>
        <p class="feature-description">
          {{ feature.desc }}
        </p>
      </div>
    </div>
    {% endfor %}
  </section>

  <section id="support" class="support">
    <h2>Need support?</h2>
    <div class="support-modules">
      <div class="email-support module"><a href="mailto: {{ objects.support.email }}">Send us an email &rarr;</a></div>
      <div class="chat-support module"><a href="{{ objects.support.chat_link }}">Live chat support &rarr;</a>
      </div>
    </div>
  </section>

</main>

<footer class="container">
  <p>&copy; 2024 {{ objects.site.app_name }}</p>
  <p class="footer-legal">
    <a href="privacy.html">Privacy</a> |
    <a href="tos.html">Terms of Service</a> |
    <a href="eula.html">EULA</a>
  </p>
</footer>