{% layout 'theme' title: "" %}

<nav class="nav">
  <div class="container">
    <div class="brand">
      {% if app.logo %}
      <a href="/">
        <img class="app-logo" src="{{ app.logo.url }}" alt="{{ app.name }} logo" />
      </a>
      {% endif %}
      <span class="app-name">
        {{ app.name }}
      </span>
    </div>
    <div class="nav-items">
      <a class="nav-item" href="#support">Support</a>
      <div class="download-options">
        {% if app.direct_download_link != empty %}
        <a href="{{app.direct_download_link}}">
          <button class="button">Download</button>
        </a>
        {% endif %}
        {% if app.playstore_download_link != empty %}
        <a href="{{app.playstore_download_link}}">
          <img class="play-store-download" src="images/play-store-black.svg" />
        </a>
        {% endif %}
        {% if app.appstore_download_link != empty %}
        <a href="{{app.appstore_download_link}}">
          <img class="app-store-download" src="images/app-store-black.svg" />
        </a>
        {% endif %}
      </div>
    </div>
  </div>
</nav>

<header class="hero">
  <div class="container">
    <div class="hero-statement">
      <h1>{{ app.tagline }}</h1>
    </div>
  </div>
</header>

<section class="image-carousel-section">
  <div class="image-carousel" id="imageCarousel">
    <div class="carousel-track" id="carouselTrack">
      {% for screenshot in screenshots %}
      <div class="carousel-slide {% if forloop.first %}active{% endif %}" data-index="{{ forloop.index0 }}">
        <img src="{{screenshot.image.url}}" alt="Image {{ forloop.index }}" />
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<main class="container">

  <section id="features" class="features-grid">
    {% for feature in features %}
    <div class="feature">
      <div class="feature-icon {% if feature.icon %}has-image{% endif %}">
        <i class="ph-bold ph-{{ feature.icon }}"></i>
      </div>
      <div class="feature-text">
        <h3>{{ feature.title }}</h3>
      </div>
    </div>
    {% endfor %}
  </section>

  {% if support.email != "" or support.chat_link != "" %}
  <section id="support" class="support">
    <h2>Need help?</h2>
    <p class="description">Reach out to us through one of the methods below:</p>
    <div class="support-modules">
      {% if support.chat_link != empty %}
      <div class="chat-support module">
        <a href="{{ support.chat_link }}">Zendesk</a>
      </div>
      {% endif %}
      {% if support.email != empty %}
      <div class="email-support module">
        <a href="mailto: {{ support.email }}">Email</a>
      </div>
      {% endif %}
      {% if support.discord_link != empty %}
      <div class="discord-support module">
        <a href="{{ support.discord_link }}">Discord</a>
      </div>
      {% endif %}
    </div>
  </section>
  {% endif %}

</main>

<script src="/carousel.js" type="application/javascript" defer></script>