{% layout 'theme' title: "" %}

<nav class="nav">
  <div class="container">
    <div class="brand">
      {% if app.logo %}
        <a href="/">
          <img
            class="app-logo"
            src="{{ app.logo.url }}"
            alt="{{ app.name }} logo" />
        </a>
      {% endif %}
      <span class="app-name">
        {{ app.name }}
      </span>
    </div>
    <div class="nav-items">
      <a class="nav-item" href="#features">Features</a>
      <a class="nav-item" href="#support">Support</a>
    </div>
  </div>
</nav>

<header class="hero">
  <div class="container">
    <div class="hero-statement">
      <span class="supplement">Introducing</span>
      <h1>{{ app.name }}</h1>
      <div class="download-options">
        {% if app.appstore_download_link != empty %}
          <a href="{{app.appstore_download_link}}">
            <img class="app-store-download" src="images/app-store-black.svg" />
          </a>
        {% endif %}
        {% if app.playstore_download_link != empty %}
          <a href="{{app.playstore_download_link}}">
            <img class="play-store-download" src="images/play-store-black.svg" />
          </a>
        {% endif %}
        {% if app.direct_download_link != empty %}
          <a href="{{app.direct_download_link}}">
            <button class="button">Download</button>
          </a>
        {% endif %}
      </div>
    </div>
    {% if screenshots.size > 0 %}
      <div class="screenshots">
        {% for screenshot in screenshots %}
          <div class="screenshot-container {{screenshot.frame}} {% unless forloop.first %}hidden{% endunless %}">
            <img
              class="screenshot"
              src="{{screenshot.image.url}}"
              alt="{{screenshot.description}}" />
            <div class="screenshot-frame"></div>
          </div>
        {% endfor %}
        {% if screenshots.size > 1 %}
          <div class="screenshot-page-icons">
            {% for page in (1..screenshots.size) %}
              <div data-page="{{page}}" class="screenshot-page-icon {% if forloop.first %}active{% endif %}"></div>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</header>

<main class="container">

  <h2>Features</h2>

  <section id="features" class="features-grid">
    {% for feature in features %}
      <div class="feature">
        <div
          class="feature-icon {% if feature.icon %}has-image{% endif %}"
          {% if feature.icon %}
          style="background-image:url('{{feature.icon.url}}')"
          {% endif %}>
          {{ feature.emoji }}
        </div>
        <div class="feature-text">
          <h3>{{ feature.title }}</h3>
          <p class="feature-description">
            {{ feature.desc }}
          </p>
        </div>
      </div>
    {% endfor %}
  </section>

  {% if support.email != "" or support.chat_link != "" %}
    <section id="support" class="support">
      <h2>Need support?</h2>
      <div class="support-modules">
        {% if support.email != empty %}
          <div class="email-support module">
            <a href="mailto: {{ support.email }}">Send us an email &rarr;</a>
          </div>
        {% endif %}
        {% if support.chat_link != empty %}
          <div class="chat-support module">
            <a href="{{ support.chat_link }}">Live chat support &rarr;</a>
          </div>
        {% endif %}
      </div>
    </section>
  {% endif %}

</main>

<script
  src="/screenshots.js"
  type="application/javascript"
  defer></script>
