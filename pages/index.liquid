{% layout 'theme' title: "Archival Website" %}

<!-- Navigation Bar -->
<nav class="navbar">
  <div class="container">
    <a href="#" class="logo">{{ objects.personal.name }}</a>
    <ul class="nav-links">
      <li><a href="#about">About</a></li>
      <li><a href="#experience">Experience</a></li>
      <li><a href="#work">Work</a></li>
      <li><a href="#contact">Contact</a></li>
      <li><a href="{{ objects.resume.file.url }}" class="resume-button"
          download="{{ objects.resume.file.filename }}">Resume</a></li>
    </ul>
    <div class="hamburger">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>
</nav>

<!-- Hero Section -->
<section id="hero">
  <div class="container">
    <p class="intro">Hi, my name is</p>
    <h1 class="name">{{ objects.personal.name }} &amp;</h1>
    <h2 class="profession">{{ objects.personal.action_line }}</h2>
    <p class="description">
      {{ objects.personal.tagline }}
    </p>
    <a href="#work" class="cta">Check out my work</a>
  </div>
</section>

<!-- About Section -->
<section id="about">
  <div class="container">
    <h2 class="section-title">About Me</h2>
    <div class="content">
      <div class="text">
        {{ objects.personal.full_about }}
      </div>
    </div>
  </div>
</section>

<!-- Experience Section -->
<section id="experience">
  <div class="container">
    <h2 class="section-title">Where I've Worked</h2>
    <!-- Experience Tabs -->
    <div class="experience">
      {{ objects.experience.description }}
    </div>
  </div>
</section>

<!-- Work Section -->
<section id="work">
  <div class="container">
    <h2 class="section-title">Some Things I've Built</h2>
    <!-- Projects -->
    <div class="projects">
      {{ objects.work.description }}
    </div>
  </div>
</section>

<!-- Contact Section -->
<section id="contact">
  <div class="container">
    <h2 class="section-title">Get In Touch</h2>
    {{ objects.contact.description }}
    <a href="mailto:{{ objects.contact.email }}" class="email-link">Say Hello</a>
  </div>
</section>

<!-- Footer -->
<footer>
  <div class="container">
    <p>&copy; 2024 {{ objects.personal.name }}</p>
  </div>
</footer>